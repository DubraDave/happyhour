<%= form_for(current_user.restaurant_follows.find_by(followed_restaurant_id: @restaurant.id), 
			html: { method: :delete }) do |f| %>
	  <div><%= hidden_field_tag :follower_id, current_user.id %></div>
	  <div><%= hidden_field_tag :followed_restaurant_id, @restaurant.id %></div>
  <%= f.submit "Unfollow", class: "btn" %>
<% end %>