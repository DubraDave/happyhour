
<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Day</th>
      <th>Beginning</th>
      <th>End</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.description, event %></td> 
        <td><%= event.day %></td>
        <td><%= event.beginning.strftime('%I:%M%p') %></td>
        <td><%= event.end.strftime('%I:%M%p') %></td>
        <td><%= event.restaurant.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
